<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCertificationActivity">

    <ImageView
        android:id="@+id/addPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="6dp"
        android:contentDescription="@string/사진대체" />

    <LinearLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPhoto"
        android:orientation="vertical">

        <EditText
            android:id="@+id/write_certification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/제목"
            android:hint="@string/제목"
            android:inputType="text" />

        <EditText
            android:id="@+id/write_certification_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="내용"
            android:hint="@string/내용"
            android:inputType="text" />

    </LinearLayout>

    <Button
        android:id="@+id/write_certification_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@id/write_certification_cancel"
        android:padding="5dp"
        android:text="@string/확인"
        android:theme="@style/Widget.AppCompat.Button.Small"
        android:layout_toStartOf="@id/write_certification_cancel" />

    <Button
        android:id="@+id/write_certification_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="@string/취소"
        android:theme="@style/Widget.AppCompat.Button.Small" />
</RelativeLayout>